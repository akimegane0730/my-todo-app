<div class="wrapper">
  <%= render 'header' %>
<div class="topPage">
  <div class="listWrapper">
    <% @lists.each do |list| %>
      <div class="list">
        <div class="list_header">
          <h2 class="list_header_title"><%= list.date %></h2>
          <div class="list_header_action">
            <%= link_to edit_list_path(list), method: :get do %>
            <i class="fas fa-edit"></i> 
            <% end %>
            <%= link_to list, method: :delete do %>
            <i class="far fa-trash-alt"></i> 
            <% end %> 
          </div>
        </div>
        <div class="cardWrapper">
          <% list.cards.each do |card| %>
            <%= link_to list_card_path(list, card), class:"cardDatail_link" do %>
            <div class="card">
              <h3 class="card_title"><%= card.title %></h3>
              <h3 class="card_time">所要予定時間<%= card.clock.name %></h3>
              <% if card.memo.size > 0 %>
                <div class="card_detail is-exist">
                <i class="fas fa-bars"></i>
                <% if card.complete_id.present? %>
                  <i class="fas fa-check"></i>
                <% end  %>
                </div>
              <% end %>
            </div>
            <% end %>
          <% end %>
          <div class="addCard">
            <i class="far fa-plus-square"></i>
            <%= link_to "さらにカードを追加", new_list_card_path(list), class: "addCard_link" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>