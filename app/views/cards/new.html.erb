<div class="cardnewPage">
  <div class='container'>
    <%= form_with model: @card, url: { action: :create }, html: { class: 'cardnewForm' }, local: true do |f| %>
      <%= f.hidden_field :list_id, value: @list.id %>
      <% if @card.errors.any? %>
        <p class="text-danger">タイトルは1～10文字以内で入力してください</p>
      <% end %>
      <div class="cardnewForm_title">
        <%= f.label :title, "タイトル" %><i class="fas fa-exclamation-triangle"></i><br>
        <%= f.text_field :title, autofocus: true, class: "form-control", placeholder: "カード名(10文字以内)" %>
      </div>
      <% if @card.errors.any? %>
        <p class="text-danger">メモは1～100文字以内で入力してください</p>
      <% end %>
      <div class="cardnewForm_memo">
        <%= f.label :memo, "意気込み" %><i class="fas fa-exclamation-triangle"></i><br>
        <%= f.text_area :memo, autofocus: true, class: "form-control", placeholder: "詳細(100文字以内)" %>
      <div class="text-center"><%= f.submit "作成する", class: "submitBtn" %></div>
      </div>
    <% end %>
  </div>
</div>