<div class="listeditPage">
  <div class="container">
    <%= form_with model: @user, url: { action: :update }, html: { class: 'listForm' }, local: true do |f| %>
      <% if @user.errors.any? %>
        <p class="text-danger">名前は1～20文字以内で入力してください</p>
      <% end %>
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control listName", placeholder: "UserName" %>
      <div class="text-center"><%= f.submit "変更する", class: "submitBtn" %></div>
    <% end %>
  </div>

</div>
